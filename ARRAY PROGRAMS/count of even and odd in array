#include <stdio.h>
int main()
{
    int even=0,odd=0,arr[5];
    printf("Please enter 5 numbers:\n");
    for(int i=0; i < 5; i++){
        scanf("%d", &arr[i]);
    }
    for(int i=0; i < 5; i++){
        if(arr[i]%2==0){
            even++;
        }
        else if (arr[i]%2!=0){
            odd++;
        }
    }
    printf("even=%d\nodd=%d",even,odd);
    return 0;
}
